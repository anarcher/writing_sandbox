<html>
<head>
  <title>Writing Sandbox</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Latest compiled and minified CSS 
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">-->
	<!-- Optional theme
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css"> -->
	<link rel="stylesheet" href="bootstrap.css">
	<link rel="stylesheet" href="bootstrap-theme.css">
	<!-- Writing Sandbox style -->
	<link rel="stylesheet" href="style.css">
</head>
<body>
  <!-- Navbar -->
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand text-muted" href="#">Writing Sandbox</a>  
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="#">About Writing Sandbox</a>   </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- End Navbar -->
  <div class="jumbotron">
	<h2 class="title">
		<span>Learn</span>
		<p>Try to answer the quiz</p> 
	</h2> 
	<div class="conbox">		
		<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
			<li role="presentation"><a role="menuitem" tabindex="-1" href="#">QnA</a></li>
			<li role="presentation"><a role="menuitem" tabindex="-1" href="#">Issue</a></li>
		</ul>	
		<h3 class="tq">Quiz</h3>
		<p>{{ quiz }}</p>
		<form method="POST">
			<div class="form-group">
				<p>write your answer :</p>
				<input name="user_text" id="id_input_english" class="form-control"/>
			</div>
			{% csrf_token %}
		</form>		
		<p>answer : {{ answer }}</p>
		<p><a class="btn btn-success btn-lg" href="/">Next</a></p>
	</div>   
 </div>
  <div class="footer">
      <p>&copy; 2014 Writing Sandbox. By Ho sung and Nasol</p>  
    </div> 
<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</body>
</html>
